{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "/lib/xp/*": ["node_modules/@enonic-types/lib-*"]
    },
    "declaration": true,
    "declarationDir": "build/types"
  },
  "types": [
    "types"
  ]
}
